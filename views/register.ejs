<!DOCTYPE HTML>
<html>
	<head>
		<% include bootstrap %>
		<link type="text/css" rel= "stylesheet" href="/stylesheets/global.css">
		<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
	</head>
	<body>
		<% include nav_no_logged %>
		<div class="container">
			<h1 class="title">Register</h1>

			<form id="form_register" method="POST" action="/user/add">
				<div id="tag_list_container">
					<!-- Javascript will add tags in this container -->
				</div>
				<div class="form-group row">
					<label for="input_email" class="col-sm-2 col-form-label text_right_align">Email</label>
					<div class="col-sm-6">
						<input type="email" class="form-control" id="input_email" placeholder="Email" name="email" required>
					</div>
				</div>

				<div class="form-group row">
					<label for="input_password1" class="col-sm-2 col-form-label text_right_align">Password</label>
					<div class="col-sm-6">
						<input type="password" class="form-control" id="input_password1" placeholder="Password" name="password1" required>
					</div>
				</div>

				<div class="form-group row">
					<label for="input_password2" class="col-sm-2 col-form-label text_right_align">Re-enter Password</label>
					<div class="col-sm-6">
						<input type="password" class="form-control" id="input_password2" placeholder="Password" required>
					</div>
				</div>

				<div class="form-group row">
					<label for="input_first_name" class="col-sm-2 col-form-label text_right_align">First Name</label>
					<div class="col-sm-6">
						<input type="text" class="form-control" id="input_first_name" placeholder="First Name" name="firstName" required>
					</div>
				</div>

				<div class="form-group row">
					<label for="input_last_name" class="col-sm-2 col-form-label text_right_align">Last Name</label>
					<div class="col-sm-6">
						<input type="text" class="form-control" id="input_last_name" placeholder="Last Name" name="lastName" required>
					</div>
				</div>

				<div class="form-group row">
					<label for="input_city" class="col-sm-2 col-form-label text_right_align">City</label>
					<div class="col-sm-6">
						<input type="text" class="form-control" id="input_city" placeholder="City" name="city" required>
					</div>
				</div>
				<button type="submit" class="btn btn-primary">Register</button>
			</form>
		</div>
	</body>
</html>
<script src="/client-js/register.js"></script>