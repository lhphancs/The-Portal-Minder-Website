<!DOCTYPE HTML>
<html>
    <head>
        <link type="text/css" rel= "stylesheet" href="/stylesheets/global.css">
        <link type="text/css" rel= "stylesheet" href="/stylesheets/profile.css">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    </head>
    <body>
        <% include header_navs.html %>
        <div class="profile_container">
            <form>
                <h1 class="title">Profile</h1>
                <div class="user_photo_container">
                    <h1 class="user_name"><%= firstName %> <%= lastName %></h1>
                    <video class="user_photo display_none" id="video_webcam" autoplay="true"></video>
                    <canvas id="canvas_user" class="user_photo" width="100" height="100"></canvas>
                    <button id="btn_webcam_toggle">Activate Webcam</button>
                </div>

                <form action ="other_profile.html">
                    <input class ="btn_search_users" type="submit" value="Match with Others">
                </form>

                <div class="input_container">
                    First Name: 
                    <input id="user_first_name" class="input_user" value=<%= firstName %>>
                </div>
                
                <div class="input_container">
                    Last Name: 
                    <input id="user_first_name" class="input_user" value=<%= lastName %>>
                </div>

                <div class="input_container">
                    Education: 
                    <input id="user_first_name" class="input_user" value=<%= education %>>
                </div>

                <h3>Description</h3>
                <textarea id="textarea_description"><%= description %></textarea>

                <h3>Tags</h3>
                <div id="tag_list_container">
                    <!-- Javascript will add tags in this container -->
                </div>

                <div class="input_user">
                    <input id="input_tag" type="text">
                    <button id="btn_add_tag" class="btn">Add Tag</button>
                </div>

                <div>
                    <div class="editable_container">
                        <h3>Location (City)</h3>
                        <textarea id="textarea_city"><%= city %></textarea>
                        <input id="btn_save_profile" class="btn_large" type="submit" value="Save Profile">
                    </div>
                    <img class="map_display" id="map">
                </div>
            </form>    
    </body>
</html>

<script src="/client-js/profile.js"></script>